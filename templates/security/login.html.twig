{% extends 'base.html.twig' %}

{% block title %}{{ 'auth.login.title'|trans }}{% endblock %}

{% block body %}
    {#
    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    #}
    <div class="container my-5">
        <h1 class="h3 mb-3 font-weight-normal">{{ 'auth.login.title'|trans }}</h1>

        {{ include('components/_flashes.html.twig') }}

        <form action="" method="post">
            <div class="form-group">
                <label for="inputEmail" class="form-label">{{ 'form.field.email'|trans }}</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="form-label">{{ 'form.field.password'|trans }}</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="btn btn-lg btn-primary" type="submit">{{ 'form.field.connect'|trans }}</button>
        </form>
        <div class="mt-3">
            <p>{{ 'auth.login.no_register'|trans }} <a href="{{ path('app_register') }}">{{ 'auth.login.register'|trans }}</a></p>
        </div>
    </div>
{% endblock %}
